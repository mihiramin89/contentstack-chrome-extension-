{
    "manifest_version": 2,

    "name": "Contentstack Extension",
    "description": "A chrome extension for contentstack.built.io that allows the user to click on an element from a contentstack website and be taken to the latest revision of that element.",
    "version": "1.0",
    "author": "Mihir Amin",
    "browser_action": {
        "default_icon": {
            "16": "img/badgeDis16.png",
            "32": "img/badgeDis32.png",
            "48": "img/badgeDis48.png"
        },
        "default_title": "Click to login contentstack",
        "default_popup": "HTML/Menu.html",
        "name": "Contentstack"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": true
    },
    "permissions": ["activeTab", "tabs", "storage", "contextMenus", "http://*/", "https://*/"],
    "icons": {
        "16": "img/badge48.png",
        "48": "img/badge515.png",
        "172": "img/badge172.png",
        "344": "img/badge344.png"
    },
    "web_accessible_resources": ["img/*.svg", "img/*.png", "css/styles.css"]
}